{% extends 'base.html.twig' %}

{% block content %}
    <h1>Event</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{% if event.datestart %}{{ event.datestart|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endstart</th>
                <td>{% if event.dateend %}{{ event.dateend|date('d-m-Y') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
