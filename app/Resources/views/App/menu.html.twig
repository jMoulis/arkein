<ul class="navbar-nav">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ app.user.username }}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                {% if is_granted("ROLE_ADMIN") %}
                    <a class="dropdown-item" href="{{ path('dashboard') }}">Tableau de bord</a>
                    <a class="dropdown-item" href="{{ path('member_edit', {'id': (findMember(app.user.id))}) }}">Mon profile</a>
                {% else %}
                    {% if is_granted("ROLE_ORGA") %}
                        <a class="dropdown-item" href="{{ path('organization_edit', {'id': (findOrga(app.user.id))}) }}">Mon profile</a>
                    {% else %}
                        <a class="dropdown-item" href="{{ path('member_edit', {'id': (findMember(app.user.id))}) }}">Mon profile</a>
                    {% endif %}
                {% endif %}
                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            </div>
        </li>
    {% else %}
        <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
    {% endif %}
</ul>