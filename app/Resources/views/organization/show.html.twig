{% extends ':organization:layout.html.twig' %}

{% block body %}
    <h1>Organization</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organization.description }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{% if organization.dateCreated %}{{ organization.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ organization.address }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ organization.size }}</td>
            </tr>
            <tr>
                <th>Namecontact</th>
                <td>{{ organization.namecontact }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ organization.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ organization.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ organization.phone }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ organization.website }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ organization.facebook }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('organization_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('organization_edit', { 'id': organization.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
