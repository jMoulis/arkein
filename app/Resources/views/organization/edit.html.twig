{% extends ':organization:layout.html.twig' %}

{% block body %}
    <h1>Organization edit</h1>
    <p><a href="{{ path('organization_index') }}">Back to the list</a></p>
    {{ form_start(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.description) }}
        {{ form_widget(edit_form.description) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.dateCreated) }}
        {{ form_widget(edit_form.dateCreated) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.size) }}
        {{ form_widget(edit_form.size) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.namecontact) }}
        {{ form_widget(edit_form.namecontact) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.firstnamecontact) }}
        {{ form_widget(edit_form.firstnamecontact) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.address) }}
        {{ form_widget(edit_form.address) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.phone) }}
        {{ form_widget(edit_form.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.email) }}
        {{ form_widget(edit_form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.facebook) }}
        {{ form_widget(edit_form.facebook) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.website) }}
        {{ form_widget(edit_form.website) }}
    </div>
    {{ form_widget(edit_form.edit, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_end(edit_form) }}
    <p>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger" />
        {{ form_end(delete_form) }}
    </p>

{% endblock %}
