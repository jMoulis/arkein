{% extends ':organization:layout.html.twig' %}

{% block body %}
    <h1>Organization edit</h1>
    <p><a href="{{ path('organization_index') }}">Back to the list</a></p>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.description) }}
        {{ form_widget(edit_form.description) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.dateCreated) }}
        {{ form_widget(edit_form.dateCreated) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.namecontact) }}
        {{ form_widget(edit_form.namecontact) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.firstnamecontact) }}
        {{ form_widget(edit_form.firstnamecontact) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.address) }}
        {{ form_widget(edit_form.address) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.phone) }}
        {{ form_widget(edit_form.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.facebook) }}
        {{ form_widget(edit_form.facebook) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.website) }}
        {{ form_widget(edit_form.website) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.credential) }}
        {{ form_widget(edit_form.credential) }}
    </div>

    {{ form_widget(edit_form.edit, {'attr': {'class': 'btn btn-primary'}}) }}
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
        Supprimer
    </button>
    {{ form_end(edit_form) }}

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteLongTitle">Confirmation Suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(delete_form) }}
                    <p>ÃŠtes-vous certain de supprimer la fiche de "{{ organization.name }}"</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <input type="submit" class="btn btn-danger" value="Supprimer" />
                </div>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

{% endblock %}
