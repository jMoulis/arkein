{% extends ':App:layout.html.twig' %}
{% block body %}
    <h1>Nouveau membre</h1>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.role) }}

    <div class="row">
        <div class="col">
            <div class="form-group">
                {{ form_label(form.coach, 'Coach', {
                    'attr': {
                        'class': 'control-label'
                    }
                }) }}
                {{ form_errors(form.coach) }}
                {{ form_widget(form.coach, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                {{ form_label(form.groups, 'Groupe', {
                    'attr': {
                        'class': 'control-label'
                    }
                }) }}
                {{ form_errors(form.groups) }}
                {{ form_widget(form.groups, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" formnovalidate>Cr√©er</button>

    {{ form_end(form) }}

{% endblock %}

{% block footer %}
{% endblock %}
