{% extends ':App:layout.html.twig' %}

{% block body %}
    <h1>Entretien</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entretien.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if entretien.date %}{{ entretien.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Compterendu</th>
                <td>{{ entretien.compteRendu }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ entretien.objet }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entretien_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entretien_edit', { 'id': entretien.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
