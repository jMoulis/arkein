{% extends 'App/layout.html.twig' %}

{% block dashcontent %}
    <h1>Liste Entretiens <a data-toggle="modal" data-target="#myModal"><i class="fa fa-cogs" aria-hidden="true"></i></a></h1>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Fonctionalitées</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="list-group">
                        <li class="list-group-item active">Gestion de création d'entretien</li>
                        <li class="list-group-item">Création d'entretien</li>
                        <li class="list-group-item">Possibilité de consulter l'entretien</li>
                        <li class="list-group-item">Valider ou invalider sa présence</li>
                        <li class="list-group-item">Créer un compte rendu</li>
                        <li class="list-group-item">Consulter et télécharger le compte rendu en pdf</li>
                        <li class="list-group-item">
                            <strong>Gestion des droits auteur</strong>
                            <ul>
                                <li class="list-group-item">- Modifier/Ajouter/Supprimer les participants et le contenu</li>
                                <li class="list-group-item">- Créer le compte-rendu</li>
                            </ul>
                        </li>
                        <li class="list-group-item">Workflow</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <div id="root"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/babel">
      document.addEventListener('DOMContentLoaded', () => {
        render(<App />, document.getElementById('root'));
      });
    </script>
{% endblock %}
