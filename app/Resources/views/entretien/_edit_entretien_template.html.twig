<form class="js-edit-entretien-form" novalidate data-entretien="<%= id %>">
    <div id="appbundle_entretien">
        <div class="form-group">
            <label class="control-label required" for="date">Date</label>
            <input type="text" id="date" name="date" required="required" class="js-datepicker form-control" value="<%= date %>" />
        </div>
        <div class="form-group">
            <label class="control-label required" for="young">Jeune</label>
            <input type="text" class="form-control" value="<%= young %>" disabled="disabled"/>
            <input type="hidden" id="young" name="young" class="form-control" value="<%= youngId %>" />
        </div>

        <div class="form-group js-select-guest">
            <label class="control-label required" for="guests">Invit√©s</label>
            <select id="guests" name="guests" class="form-control js-select-guest">
                <option value="" selected="selected">Ajouter des participants</option>
            </select>
        </div>

        <ul class="js-actual-guests list-unstyled">
            <% _.each(guests, function(guest){ %>
            <li id="<%= guest.id %>" title="<%= guest.name %>">
                <span class="js-delete-guest badge badge-danger" title="Supprimer">X</span>
                <% if(guest.status == false ) { %>
                <span class="badge badge-warning"><%= guest.name %></span>
                <% } else { %>
                <span class="badge badge-success"><%= guest.name %></span>
                <% } ; %>
            </li>
            <% }); %>
        </ul>

        <div class="form-group">
            <label class="control-label required" for="objet">Objet</label>
            <input type="text" id="objet" name="objet" required="required" maxlength="255" class="form-control" value="<%= objet %>"/>
        </div>
        <div class="form-group">
            <label class="control-label required" for="odj_edit_1">Ordre du jour</label>
            <textarea id="odj_edit_1" name="odj" required="required" class="form-control"><%= odj %></textarea>
        </div>
        <a href="#" class="js-detail-compteRendu" data-id="<%= compteRendu %>">Consulter Compte Rendu</a>
    </div>
    <button type="submit" class="btn btn-block btn-primary">Modifier</button>
</form>
