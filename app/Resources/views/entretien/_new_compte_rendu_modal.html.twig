<div class="modal fade" id="saisirCompteRenduModal" tabindex="-1" role="dialog" aria-labelledby="saisirCompteRenduModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saisirCompteRenduModalLabel">Compte Rendu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="js-compte-rendu-form">
                    <div class="form-group">
                        <label>Date</label>
                        <input class="form-control" type="date" name="date" placeholder="jj/mm/aaaa" value="{{ "now"|date("d/m/Y") }}"/>
                    </div>

                    <div class="form-group">
                        <input type="hidden" class="form-control js-entretien-input" value="" name="entretien"/>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label" for="presence">
                            Présence
                        </label>
                        <textarea name="presence" id="presence" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label" for="compteRendu">
                            Compte Rendu
                        </label>
                        <textarea name="compteRendu" id="compteRendu" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="js-btn-submit-compterendu btn btn-primary">Créer</button>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

