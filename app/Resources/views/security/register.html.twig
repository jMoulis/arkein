{% extends 'base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div id="loginform" class="">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('img/login.jpg') }}" alt="the path" />
                    <div class="card-block">
                        {{ form_start(form) }}
                            {{ form_row(form.name, {
                                'label': false,
                                'attr': {
                                    'placeholder': 'Nom'
                                }
                            }) }}
                            {{ form_row(form.firstname, {
                                'label': false,
                                'attr': {
                                    'placeholder': 'Prénom'
                                }
                            }) }}
                            {{ form_row(form.email, {
                                'label': false,
                                'attr': {
                                    'placeholder': 'Email'
                                }
                            }) }}
                            {{ form_row(form.plainPassword.first, {
                                'label': false,
                                'attr': {
                                    'placeholder': 'Mot de passe'
                                }
                            }) }}
                            {{ form_row(form.plainPassword.second, {
                                'label': false,
                                'attr': {
                                    'placeholder': 'Répéter'
                                }
                            }) }}
                            {{ form_row(form.role) }}
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}
{% endblock %}